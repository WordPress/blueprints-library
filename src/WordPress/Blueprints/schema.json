{
  "$schema": "http://json-schema.org/schema",
  "$ref": "#/definitions/Blueprint",
  "definitions": {
    "Blueprint": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "description": "Optional description. It doesn't do anything but is exposed as a courtesy to developers who may want to document which blueprint file does what."
        },
        "runtime": {
          "type": "object",
          "additionalProperties": true,
          "description": "Slot for runtimeâ€“specific options, schema must be provided by the runtime."
        },
        "onBoot": {
          "type": "object",
          "properties": {
            "openUrl": {
              "type": "string",
              "description": "The URL to navigate to after the blueprint has been run."
            },
            "login": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        },
        "wpVersion": {
          "type": "string",
          "description": "The preferred WordPress version to use. If not specified, the latest supported version will be used"
        },
        "constants": {
          "type": "object",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "number"
              },
              {
                "type": "boolean"
              }
            ]
          },
          "default": {},
          "description": "PHP Constants to define on every request",
          "deprecated": "This experimental option will change without warning.\nUse `steps` instead."
        },
        "plugins": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FileReference"
          },
          "default": [],
          "description": "WordPress plugins to install and activate",
          "deprecated": "This experimental option will change without warning.\nUse `steps` instead."
        },
        "siteOptions": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {},
          "description": "WordPress site options to define",
          "deprecated": "This experimental option will change without warning.\nUse `steps` instead."
        },
        "steps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/StepDefinition"
          },
          "description": "The steps to run after every other operation in this Blueprint was executed.",
          "default": []
        },
        "$schema": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "FileReference": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/definitions/FilesystemResource"
        },
        {
          "$ref": "#/definitions/InlineResource"
        },
        {
          "$ref": "#/definitions/CoreThemeResource"
        },
        {
          "$ref": "#/definitions/CorePluginResource"
        },
        {
          "$ref": "#/definitions/UrlResource"
        }
      ]
    },
    "FilesystemResource": {
      "type": "object",
      "properties": {
        "resource": {
          "type": "string",
          "const": "filesystem",
          "description": "Identifies the file resource as Virtual File System (VFS)"
        },
        "path": {
          "type": "string",
          "description": "The path to the file in the VFS"
        }
      },
      "required": [
        "resource",
        "path"
      ],
      "additionalProperties": false
    },
    "InlineResource": {
      "type": "object",
      "properties": {
        "resource": {
          "type": "string",
          "const": "inline",
          "description": "Identifies the file resource as an inline string"
        },
        "contents": {
          "type": "string",
          "description": "The contents of the file"
        }
      },
      "required": [
        "resource",
        "contents"
      ],
      "additionalProperties": false
    },
    "CoreThemeResource": {
      "type": "object",
      "properties": {
        "resource": {
          "type": "string",
          "const": "wordpress.org/themes",
          "description": "Identifies the file resource as a WordPress Core theme"
        },
        "slug": {
          "type": "string",
          "description": "The slug of the WordPress Core theme"
        }
      },
      "required": [
        "resource",
        "slug"
      ],
      "additionalProperties": false
    },
    "CorePluginResource": {
      "type": "object",
      "properties": {
        "resource": {
          "type": "string",
          "const": "wordpress.org/plugins",
          "description": "Identifies the file resource as a WordPress Core plugin"
        },
        "slug": {
          "type": "string",
          "description": "The slug of the WordPress Core plugin"
        }
      },
      "required": [
        "resource",
        "slug"
      ],
      "additionalProperties": false
    },
    "UrlResource": {
      "type": "object",
      "properties": {
        "resource": {
          "type": "string",
          "const": "url",
          "description": "Identifies the file resource as a URL"
        },
        "url": {
          "type": "string",
          "description": "The URL of the file"
        },
        "caption": {
          "type": "string",
          "description": "Optional caption for displaying a progress message"
        }
      },
      "required": [
        "resource",
        "url"
      ],
      "additionalProperties": false
    },
    "SupportedPHPExtensionBundle": {
      "type": "string",
      "const": "kitchen-sink"
    },
    "Progress": {
      "type": "object",
      "properties": {
        "weight": {
          "type": "number"
        },
        "caption": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "ActivatePluginStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "activatePlugin"
        },
        "slug": {
          "type": "string",
          "description": "Plugin slug, like 'gutenberg' or 'hello-dolly'."
        }
      },
      "required": [
        "slug",
        "step"
      ]
    },
    "ActivateThemeStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "activateTheme"
        },
        "slug": {
          "type": "string",
          "description": "Theme slug, like 'twentytwentythree'."
        }
      },
      "required": [
        "step",
        "slug"
      ]
    },
    "CpStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "cp"
        },
        "fromPath": {
          "type": "string",
          "description": "Source path"
        },
        "toPath": {
          "type": "string",
          "description": "Target path"
        }
      },
      "required": [
        "fromPath",
        "step",
        "toPath"
      ]
    },
    "DefineWpConfigConstsStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "defineWpConfigConsts"
        },
        "consts": {
          "type": "object",
          "additionalProperties": {},
          "description": "The constants to define"
        }
      },
      "required": [
        "consts",
        "step"
      ]
    },
    "DefineSiteUrlStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "defineSiteUrl"
        },
        "siteUrl": {
          "type": "string",
          "description": "The URL"
        }
      },
      "required": [
        "siteUrl",
        "step"
      ]
    },
    "EnableMultisiteStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "enableMultisite"
        }
      },
      "required": [
        "step"
      ]
    },
    "ImportFileStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "importFile"
        },
        "file": {
          "$ref": "#/definitions/FileReference",
          "description": "The file to import"
        }
      },
      "required": [
        "file",
        "step"
      ]
    },
    "InstallPluginStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "installPlugin",
          "description": "The step identifier."
        },
        "pluginZipFile": {
          "$ref": "#/definitions/FileReference",
          "description": "The plugin zip file to install."
        },
        "activate": {
          "type": "boolean",
          "description": "Whether to activate the plugin after installing it.",
          "default": true
        }
      },
      "required": [
        "pluginZipFile",
        "step"
      ]
    },
    "InstallThemeStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "installTheme",
          "description": "The step identifier."
        },
        "themeZipFile": {
          "$ref": "#/definitions/FileReference",
          "description": "The theme zip file to install."
        },
        "activate": {
          "type": "boolean",
          "description": "Whether to activate the theme after installing it.",
          "default": true
        }
      },
      "required": [
        "step",
        "themeZipFile"
      ]
    },
    "MkdirStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "mkdir"
        },
        "path": {
          "type": "string",
          "description": "The path of the directory you want to create"
        }
      },
      "required": [
        "path",
        "step"
      ]
    },
    "MvStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "mv"
        },
        "fromPath": {
          "type": "string",
          "description": "Source path"
        },
        "toPath": {
          "type": "string",
          "description": "Target path"
        }
      },
      "required": [
        "fromPath",
        "step",
        "toPath"
      ]
    },
    "RmStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "rm"
        },
        "path": {
          "type": "string",
          "description": "The path to remove"
        }
      },
      "required": [
        "path",
        "step"
      ]
    },
    "RmDirStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "rmdir"
        },
        "path": {
          "type": "string",
          "description": "The path to remove"
        }
      },
      "required": [
        "path",
        "step"
      ]
    },
    "RunPHPStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "runPHP",
          "description": "The step identifier."
        },
        "code": {
          "type": "string",
          "description": "The PHP code to run."
        }
      },
      "required": [
        "code",
        "step"
      ]
    },
    "EvalPHPCallbackStep": {
      "type": "object",
      "additionalProperties": false,
      "isPrivate": true,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "evalPHPCallback",
          "description": "The step identifier."
        },
        "callback": {
          "description": "The PHP function."
        }
      },
      "required": [
        "callback",
        "step"
      ]
    },
    "RunWordPressInstallerStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "runWpInstallationWizard"
        },
        "options": {
          "$ref": "#/definitions/WordPressInstallationOptions"
        }
      },
      "required": [
        "options",
        "step"
      ]
    },
    "RunSQLStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "runSql",
          "description": "The step identifier."
        },
        "sql": {
          "$ref": "#/definitions/FileReference",
          "description": "The SQL to run. Each non-empty line must contain a valid SQL query."
        }
      },
      "required": [
        "sql",
        "step"
      ]
    },
    "SetSiteOptionsStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "setSiteOptions",
          "description": "The name of the step. Must be \"setSiteOptions\"."
        },
        "options": {
          "type": "object",
          "additionalProperties": {},
          "description": "The options to set on the site."
        }
      },
      "required": [
        "options",
        "step"
      ]
    },
    "UnzipStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "unzip"
        },
        "zipFile": {
          "$ref": "#/definitions/FileReference",
          "description": "The zip file to extract"
        },
        "extractToPath": {
          "type": "string",
          "description": "The path to extract the zip file to"
        }
      },
      "required": [
        "zipFile",
        "extractToPath",
        "step"
      ]
    },
    "DownloadWordPressStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "downloadWordPress"
        },
        "wordPressZip": {
          "$ref": "#/definitions/FileReference",
          "description": "The zip file to extract"
        }
      },
      "required": [
        "wordPressZip",
        "step"
      ]
    },
    "InstallSqliteIntegrationStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "installSqliteIntegration"
        },
        "sqlitePluginZip": {
          "$ref": "#/definitions/FileReference",
          "description": "The zip file to extract"
        }
      },
      "required": [
        "sqlitePluginZip",
        "step"
      ]
    },
    "WriteFileStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "writeFile"
        },
        "path": {
          "type": "string",
          "description": "The path of the file to write to"
        },
        "data": {
          "anyOf": [
            {
              "$ref": "#/definitions/FileReference"
            },
            {
              "type": "string"
            }
          ],
          "description": "The data to write"
        }
      },
      "required": [
        "data",
        "path",
        "step"
      ]
    },
    "WPCLIStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "progress": {
          "$ref": "#/definitions/Progress"
        },
        "continueOnError": {
          "type": "boolean",
          "default": false
        },
        "step": {
          "type": "string",
          "const": "wp-cli",
          "description": "The step identifier."
        },
        "command": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ],
          "description": "The WP CLI command to run."
        }
      },
      "required": [
        "command",
        "step"
      ]
    },
    "StepDefinition": {
      "type": "object",
      "discriminator": {
        "propertyName": "step"
      },
      "required": [
        "step"
      ],
      "oneOf": [
        {
          "$ref": "#/definitions/ActivatePluginStep"
        },
        {
          "$ref": "#/definitions/ActivateThemeStep"
        },
        {
          "$ref": "#/definitions/CpStep"
        },
        {
          "$ref": "#/definitions/DefineWpConfigConstsStep"
        },
        {
          "$ref": "#/definitions/DefineSiteUrlStep"
        },
        {
          "$ref": "#/definitions/EnableMultisiteStep"
        },
        {
          "$ref": "#/definitions/EvalPHPCallbackStep"
        },
        {
          "$ref": "#/definitions/ImportFileStep"
        },
        {
          "$ref": "#/definitions/InstallPluginStep"
        },
        {
          "$ref": "#/definitions/InstallThemeStep"
        },
        {
          "$ref": "#/definitions/MkdirStep"
        },
        {
          "$ref": "#/definitions/MvStep"
        },
        {
          "$ref": "#/definitions/RmStep"
        },
        {
          "$ref": "#/definitions/RmDirStep"
        },
        {
          "$ref": "#/definitions/RunPHPStep"
        },
        {
          "$ref": "#/definitions/RunWordPressInstallerStep"
        },
        {
          "$ref": "#/definitions/RunSQLStep"
        },
        {
          "$ref": "#/definitions/SetSiteOptionsStep"
        },
        {
          "$ref": "#/definitions/UnzipStep"
        },
        {
          "$ref": "#/definitions/DownloadWordPressStep"
        },
        {
          "$ref": "#/definitions/InstallSqliteIntegrationStep"
        },
        {
          "$ref": "#/definitions/WriteFileStep"
        },
        {
          "$ref": "#/definitions/WPCLIStep"
        }
      ]
    },
    "HTTPMethod": {
      "type": "string",
      "enum": [
        "GET",
        "POST",
        "HEAD",
        "OPTIONS",
        "PATCH",
        "PUT",
        "DELETE"
      ]
    },
    "FileInfo": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "data": {
          "type": "object",
          "properties": {
            "BYTES_PER_ELEMENT": {
              "type": "number"
            },
            "buffer": {
              "type": "object",
              "properties": {
                "byteLength": {
                  "type": "number"
                }
              },
              "required": [
                "byteLength"
              ],
              "additionalProperties": false
            },
            "byteLength": {
              "type": "number"
            },
            "byteOffset": {
              "type": "number"
            },
            "length": {
              "type": "number"
            }
          },
          "required": [
            "BYTES_PER_ELEMENT",
            "buffer",
            "byteLength",
            "byteOffset",
            "length"
          ],
          "additionalProperties": {
            "type": "number"
          }
        }
      },
      "required": [
        "key",
        "name",
        "type",
        "data"
      ],
      "additionalProperties": false
    },
    "WordPressInstallationOptions": {
      "type": "object",
      "properties": {
        "adminUsername": {
          "type": "string",
          "default": "admin"
        },
        "adminPassword": {
          "type": "string",
          "default": "password"
        }
      },
      "additionalProperties": false
    }
  }
}
