{
  "prefer-stable": true,
  "require": {
    "symfony/event-dispatcher": "v3.3.6",
    "symfony/filesystem": "v3.3.6",
    "symfony/process": "v3.3.6",
    "pimple/pimple": "v3.2.3",
    "psr/simple-cache": "1.0.1",
    "ext-json": "*",
    "symfony/console": "^3.3.6"
  },
  "require-dev": {
    "phpunit/phpunit": "6.5.14",
    "squizlabs/php_codesniffer": "3.9.0",
    "nette/php-generator": "v3.0.5",
    "bamarni/composer-bin-plugin": "v1.5.0",
    "wp-coding-standards/wpcs": "3.0",
    "phpcompatibility/php-compatibility": "^9.3"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "php-http/discovery": true,
      "bamarni/composer-bin-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "7.0"
    }
  },
  "autoload": {
    "classmap": [
      "src/"
    ],
    "psr-4": {
      "WordPress\\": "src/WordPress",
      "Symfony\\Component\\Process\\": "vendor/symfony/process",
      "Opis\\JsonSchema\\": "src/opis/json-schema/src",
      "Opis\\String\\": "src/opis/string/src",
      "Opis\\Uri\\": "src/opis/uri/src"
    },
    "files": [
      "src/WordPress/Blueprints/functions.php",
      "src/WordPress/Zip/functions.php",
      "src/WordPress/Streams/stream_str_replace.php",
      "src/WordPress/AsyncHttp/async_http_streams.php"
    ]
  },
  "autoload-dev": {
    "classmap": [
      "tests/"
    ]
  },
  "scripts": {
    "phpcs": "phpcs --standard=WordPress"
  }
}
