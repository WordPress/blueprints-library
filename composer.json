{
  "prefer-stable": true,
  "require": {
    "json-mapper/json-mapper": "*",
    "symfony/event-dispatcher": "*",
    "symfony/filesystem": "*",
    "symfony/process": "*",
    "symfony/http-client": "*",
    "symfony/http-kernel": "*",
    "pimple/pimple": "*",
    "psr/simple-cache": "*",
    "opis/json-schema": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "squizlabs/php_codesniffer":"*",
    "nette/php-generator": "*",
    "jane-php/json-schema": "*",
    "bamarni/composer-bin-plugin": "*"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "php-http/discovery": true,
      "bamarni/composer-bin-plugin": true
    },
    "platform": {
      "php": "7.4"
    }
  },
  "autoload": {
    "classmap": [
      "src/"
    ],
    "psr-4": {
      "WordPress\\": "src/WordPress",
      "Symfony\\Component\\Process\\": "vendor/symfony/process"
    },
    "files": [
      "src/WordPress/Blueprints/functions.php",
      "src/WordPress/Zip/functions.php",
      "src/WordPress/Streams/stream_str_replace.php"
    ]
  },
  "scripts": {
    "phpcs": "phpcs --standard=PSR4"
  }
}
